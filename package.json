{
  "name": "study-with-miku",
  "version": "0.0.1",
  "description": "Study with Miku - 和Miku一起学习吧~",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "vite:build": "vite build",
    "generate-icons": "bun scripts/generate-icons.js",
    "build": "bun run generate-icons && bun run vite:build && bun run copy-assets",
    "preview": "vite preview",
    "copy-assets": "copyfiles -u 1 public/**/* dist/",
    "dev:worker": "bun run build && wrangler dev --local",
    "deploy:worker": "wrangler deploy",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --ignore-path .gitignore",
    "format": "prettier --write \"src/**/*.{js,vue,scss,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,vue,scss,css}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@iconify/vue": "^5.0.0",
    "@vueuse/core": "^10.1.2",
    "aplayer": "^1.10.1",
    "hono": "^4.11.0",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@iconify-json/lucide": "^1.2.83",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/ph": "^1.2.2",
    "@vitejs/plugin-vue": "^6.0.3",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^9.33.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "sass-embedded": "^1.97.1",
    "sharp": "^0.33.0",
    "unplugin-icons": "^22.5.0",
    "vite": "^7.3.0",
    "vite-plugin-pwa": "^1.2.0",
    "wrangler": "^4.53.0"
  },
  "lint-staged": {
    "*.{js,jsx,vue,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{scss,css}": [
      "prettier --write"
    ]
  }
}
