{
  "name": "study-with-miku",
  "version": "1.2.0",
  "description": "Study with Miku - 和Miku一起学习吧~",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "vite:build": "vite build",
    "generate-icons": "bun scripts/generate-icons.js",
    "build": "bun run generate-icons && bun run vite:build && bun run copy-assets",
    "preview": "vite preview",
    "copy-assets": "copyfiles -u 1 public/**/* dist/",
    "dev:worker": "bun run build && wrangler dev --local",
    "deploy:worker": "wrangler deploy",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --ignore-path .gitignore",
    "format": "prettier --write \"src/**/*.{js,vue,scss,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,vue,scss,css}\"",
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:api": "vitest run --config vitest.config.api.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "bun run test:coverage && bun run test:api && bun run test:e2e",
    "release": "release-it",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource/fira-code": "^5.2.7",
    "@hono/zod-validator": "^0.7.6",
    "@iconify/vue": "^5.0.0",
    "@simplewebauthn/server": "^13.2.2",
    "@vueuse/core": "^10.1.2",
    "aplayer": "^1.10.1",
    "cbor-x": "^1.6.0",
    "chart.js": "^4.5.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.0",
    "html2canvas": "^1.4.1",
    "marked": "^17.0.1",
    "vue": "^3.3.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@iconify-json/lucide": "^1.2.83",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/ph": "^1.2.2",
    "@playwright/test": "^1.58.0",
    "@release-it/conventional-changelog": "^10.0.4",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vue/test-utils": "^2.4.6",
    "comment-parser": "^1.4.5",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "copyfiles": "^2.4.1",
    "drizzle-kit": "^0.31.8",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^9.33.0",
    "fake-indexeddb": "^6.2.5",
    "happy-dom": "^20.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.7",
    "prettier": "^3.7.4",
    "release-it": "^19.2.4",
    "sass-embedded": "^1.97.1",
    "sharp": "^0.33.0",
    "unplugin-icons": "^22.5.0",
    "vite": "^7.3.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18",
    "wrangler": "^4.53.0"
  },
  "lint-staged": {
    "*.{js,jsx,vue,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{scss,css}": [
      "prettier --write"
    ]
  }
}
